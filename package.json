{
  "name": "rxjs-devtools",
  "private": true,
  "workspaces": [
    "packages/rxjs-devtools-chrome-extension",
    "packages/rxjs-devtools-react"
  ],
  "packageManager": "yarn@4.9.2",
  "scripts": {
    "version:beta": "yarn workspaces foreach --all version --prerelease --deferred --preid beta",
    "publish:beta": "yarn workspaces foreach --all npm publish --tag beta --access public"
  }
}
